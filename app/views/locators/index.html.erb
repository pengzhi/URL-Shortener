<h3> Statistics </h3>

<table>
  <tr>
    <th> Short URL </th>
    <th> Referrers </th>
    <th> Hits </th>
  </tr>
  <% @locators.each do |locator| -%>
    <tr>
      <td>
        <% actual_link = short_url( locator.base36 ) -%>
        <%= link_to actual_link, actual_link, :target => '_blank' %>
      </td>
      <td>
        <% locator.referrer_hit.each do |referrer, hit | -%>
          <%= referrer %> <br />
        <% end -%>
      </td>
      <td>
        <% locator.referrer_hit.each do |referrer, hit | -%>
          <%= hit %> <br />
        <% end -%>
      </td>
    </tr>
  <% end -%>
</table>
